<div class="container-title">
  <h1>YOUR BOOKINGS</h1>
</div>

   <section class="portfolio-experiment">
    <a href="/monuments/new">
      <span class="text">WANT TO BE A HOST?</span>
      <span class="line -right"></span>
      <span class="line -top"></span>
      <span class="line -left"></span>
      <span class="line -bottom"></span>
    </a>
  </section>

<hr>
<div class="container">
  <div class="row">
    <div class="col-8">
        <% @bookings.each do |booking| %>
        <div class="col-6" style="padding: 10px;">
          <div class="card-trip">
              <%= cl_image_tag booking.monument.photo.key, height: 300, width: 400, crop: :fill %>
              <div class="card-trip-infos">
                <div>
                  <h2><%= link_to booking.monument.name %></h2>
                  <p><%= booking.start_date %></p>
                  <p><%= booking.end_date %></p>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
</div>
