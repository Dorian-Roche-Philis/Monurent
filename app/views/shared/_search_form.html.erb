<div class="container-search">
  <div>
    <h2>Find a monument, and rent it!</h2>
  </div>
  <%= form_tag monuments_path, method: :get do %>
    <%= text_field_tag :query,
                    params[:query],
                    class: "form-control title-form",
                    placeholder: "Rome" %>

    <%= submit_tag "SEARCH", class: "btn btn-form title-form" %>
  <% end %>
</div>
