  <h2>Find inspiration for your events.</h2>
</div>

<div class="container mt-4">
  <div class="row">
    <div class="col-8">
      <div class="row">
        <% @monuments.each do |monument| %>
        <div class="col-6" style="padding: 10px;">
          <div class="card-trip">
              <% if monument.photos.attached? %>
              <% monument.photos.each do |photo| %>
                <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
              <% end %>
              <% end %>
              <div class="card-trip-infos">
                <div>
                  <h2><%= link_to monument.name, monument_path(monument) %></h2>
                  <p><%= monument.city %></p>
                </div>
                <h2 class="card-trip-pricing">$<%= monument.price %>M</h2>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-4">
      <div id="map"
     style="width: 100%;
     height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">

     </div>
      </div>

    </div>
</div>
